<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
  <error-page>
    <location>/controller?command=show_error</location>
  </error-page>

  <jsp-config>
    <taglib>
      <taglib-uri>com.sidorovich.pavel</taglib-uri>
      <taglib-location>WEB-INF/tld/transactionsTags.tld</taglib-location>
    </taglib>
  </jsp-config>

  <filter-mapping>
    <filter-name>RoleFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>UserBlockFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>LanguageFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>ExpiredBonusesFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>